{
  "author": "ModyQyW",
  "license": "MIT",
  "scripts": {
    "dev": "vuepress dev docs",
    "build:no-rename": "vuepress build docs",
    "build": "vuepress build docs && renamer ./docs/.vuepress/dist/manifest.webmanifest --replace manifest.json",
    "deploy": "sh deploy.sh",
    "lint": "yarn lint:json && yarn lint:markdown && yarn lint:script",
    "lint:json": "prettier ./**/*.json --write",
    "lint:markdown": "markdownlint . --fix",
    "lint:script": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --fix"
  },
  "devDependencies": {
    "@modyqyw/fabric": "~1.17.0",
    "@vssue/api-github-v3": "~1.4.7",
    "@vssue/vuepress-plugin-vssue": "~1.4.7",
    "babel-eslint": "~10.1.0",
    "eslint": "~7.20.0",
    "markdownlint-cli": "~0.26.0",
    "prettier": "~2.2.1",
    "renamer": "~2.0.1",
    "vuepress": "~1.8.2",
    "vuepress-plugin-helper-live2d": "~1.0.2",
    "vuepress-theme-hope": "~1.10.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": "prettier --write",
    "*.md": "markdownlint --fix",
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix"
  }
}
