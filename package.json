{
  "author": "ModyQyW",
  "license": "MIT",
  "scripts": {
    "gitee:dev": "cross-env MODE=gitee vuepress dev docs",
    "gitee:build": "cross-env MODE=gitee vuepress build docs",
    "github:dev": "cross-env MODE=github vuepress dev docs",
    "github:build": "cross-env MODE=github vuepress build docs",
    "lint": "yarn run lint:json && yarn run lint:markdown && yarn run lint:script",
    "lint:json": "prettier ./**/*.json --write --ignore-path=.gitignore",
    "lint:markdown": "markdownlint . --fix --ignore-path=.gitignore && lint-md . --fix",
    "lint:script": "eslint . --fix --ext=.js,.jsx,.ts,.tsx,.vue --ignore-path=.gitignore",
    "commit": "cz",
    "prepare": "is-ci || husky install"
  },
  "devDependencies": {
    "@babel/core": "~7.14.6",
    "@babel/eslint-parser": "~7.14.7",
    "@commitlint/cli": "~12.1.4",
    "@modyqyw/fabric": "~2.5.2",
    "cross-env": "~7.0.3",
    "eslint": "~7.30.0",
    "husky": "~7.0.0",
    "is-ci": "~3.0.0",
    "lint-md-cli": "~0.1.2",
    "lint-staged": "~11.0.0",
    "markdownlint-cli": "~0.27.1",
    "prettier": "~2.3.2",
    "vuepress": "~1.8.2",
    "vuepress-plugin-helper-live2d": "~1.0.2",
    "vuepress-theme-hope": "~1.19.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
