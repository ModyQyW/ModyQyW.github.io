  "scripts": {
    "gitee:dev": "cross-env MODE=gitee vuepress dev docs",
    "gitee:build": "cross-env MODE=gitee vuepress build docs",
    "github:dev": "cross-env MODE=github vuepress dev docs",
    "github:build": "cross-env MODE=github vuepress build docs",
    "lint": "yarn lint:json && yarn lint:markdown && yarn lint:script",
    "lint:json": "prettier ./**/*.json --write",
    "lint:markdown": "markdownlint . --fix && lint-md . --fix",
    "lint:script": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --fix",
    "commit": "cz",
    "prepare": "is-ci || husky install"
  },
  "devDependencies": {
    "@babel/core": "~7.14.3",
    "@babel/eslint-parser": "~7.14.4",
    "@commitlint/cli": "~12.1.4",
    "@modyqyw/fabric": "~2.1.0",
    "cross-env": "~7.0.3",
    "eslint": "~7.27.0",
    "husky": "~6.0.0",
    "is-ci": "~3.0.0",
    "lint-md-cli": "~0.1.2",
    "lint-staged": "~11.0.0",
    "markdownlint-cli": "~0.27.1",
    "prettier": "~2.3.0",
    "vuepress": "~1.8.2",
    "vuepress-plugin-helper-live2d": "~1.0.2",
    "vuepress-theme-hope": "~1.17.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
